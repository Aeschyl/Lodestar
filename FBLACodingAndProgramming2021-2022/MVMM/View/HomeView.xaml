<UserControl x:Class="FBLACodingAndProgramming2021_2022.MVMM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FBLACodingAndProgramming2021_2022.MVMM.View"
        
        
        
        
        
       xmlns:viewModel="clr-namespace:FBLACodingAndProgramming2021_2022.MVMM.ViewModel"
        xmlns:view="clr-namespace:FBLACodingAndProgramming2021_2022.MVMM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">





    <Grid Margin="0,100,0,100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Eating"
                x:Name="EatingButton"
                FontSize="20"
                Height="100"
                Width=" 150"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderThickness="0"
                Foreground="White"
                Background="#0d0d0d"
                Margin="0,0,0,0"
                Grid.Column="0"
                Grid.Row="0" Click="EatingButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20">

                    </Setter>
                </Style>
            </Button.Resources>

        </Button>
        <Button Content="Shopping"
                x:Name="ShoppingButton"
                FontSize="20"
                Height="100"
                Width=" 150"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderThickness="0"
                Foreground="White"
                Background="#0d0d0d"
                Margin="0,0,0,0"
                Grid.Column="1"
                Grid.Row="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20">

                    </Setter>
                </Style>
            </Button.Resources>

        </Button>


        <Button Content="Traveling"
                x:Name="TravelingButton"
                FontSize="20"
                Height="100"
                Width=" 150"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderThickness="0"
                Foreground="White"
                Background="#0d0d0d"
                Margin="0,0,0,0"
                Grid.Column="0"
                Grid.Row="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20">

                    </Setter>
                </Style>
            </Button.Resources>


        </Button>

        <Button Content="Entertainment"
                x:Name="EntertainmentButton"
                FontSize="20"
                Height="100"
                Width=" 150"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderThickness="0"
                Foreground="White"
                Background="#0d0d0d"
                Margin="0,0,0,0"
                Grid.Column="1"
                Grid.Row="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20">

                    </Setter>
                </Style>
            </Button.Resources>


        </Button>
        <TextBlock HorizontalAlignment="Center" Margin="0,-61,0,0" Text="Select A Category" VerticalAlignment="Top" Foreground="White" FontSize="25"/>


    </Grid>




</UserControl>
