<UserControl x:Class="FBLACodingAndProgramming2021_2022.MVMM.View.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FBLACodingAndProgramming2021_2022.MVMM.View"
             xmlns:model="clr-namespace:FBLACodingAndProgramming2021_2022.MVMM.Model"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    
    <Border Grid.Column="1"
            BorderBrush="#0078d7"
            BorderThickness="5"
            CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border CornerRadius="5"
                    Margin="25,20,20,20"
                    BorderThickness="5"
                    BorderBrush="#0078d7">
                <m:Map x:Name="Map" CredentialsProvider="qc9Y7SHHRgYbev4fUy0q~ZgF6eo0fD9ieP3VnKoDX_Q~AnM4TYqGE82d-jah6trRCttSyWK53fdPmYnyOjGbcYfmD61QQYzwoRH2oNJN9AZG" Mode="Aerial"  Visibility="Hidden">

                </m:Map>
            </Border>




            


                <StackPanel Grid.Row="0"
                            Grid.Column="1">

                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Alphabetical Order"
                                Style="{StaticResource BetterButton}"
                                FontFamily="Bebas"
                                Background="#0078d7"
                                Foreground="White"
                                Padding="10,0,10,0"
                                HorizontalAlignment="Center"
                                Click="AlphabeticalOrder_Click"
                                FontSize="14"/>
                        <Button Content="Distance From Home"
                                Grid.Column="1"
                                Padding="10,0,10,0"
                                Foreground="White"
                                Style="{StaticResource BetterButton}"
                                FontFamily="Bebas"
                                Click="DistanceFromHome_Click"
                                Background="#0078d7"
                                HorizontalAlignment="Center"
                                FontSize="14"/>
                    </Grid>

                    <ListBox Foreground="Black"
                         Grid.Row="1"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Height="450"
                         Background="#d1d1d1"
                         Margin="20,0,20,20"
                         x:Name="MainListBox"
                         MouseDoubleClick="MainListBox_MouseDoubleClick">
                        <ListBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius"
                                    Value="5" />
                            </Style>
                        </ListBox.Resources>

                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="model:ListViewFeature">
                                <Border CornerRadius="5" Margin="5" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"></ColumnDefinition>
                                            <ColumnDefinition Width="2*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Border CornerRadius="20" BorderBrush="Black" BorderThickness="2" Height="100" Width="100">
                                            <Border.Background>
                                                
                                                <ImageBrush Grid.Column="0"  ImageSource="{Binding Image}" Stretch="UniformToFill"></ImageBrush>
                                                
                                            </Border.Background>
                                        </Border>
                                        <StackPanel Grid.Column="1">
                                            <Label Content="{Binding Title}" FontSize="15" Margin="10,5,0,0"></Label>
                                            <TextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" TextWrapping="Wrap" Text="{Binding Address}"  FontSize="10" Margin="10,5,0,0"></TextBox>
                                            <Label Content="{Binding DistanceFromHome}" FontSize="10" Margin="10,5,0,0"></Label>
                                            <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                                                <Label Content="{Binding Temperature}"></Label>
                                                <Image Source="{Binding Icon}" Height="30" Width="30" Stretch="Uniform" ToolTip="{Binding WeatherDescription}"></Image>
                                                <Button Click="AddToRoute_Click" ToolTip="{Binding FeatureName}" Style="{StaticResource BetterButton}" Content="Add To Route" Margin="20,0,0,5"></Button>
                                                <Button Click="RemoveFromRoute_Click" ToolTip="{Binding FeatureName}" Style="{StaticResource BetterButton}" Margin="5,0,0,5">Remove</Button>
                                            </StackPanel>
                                    </StackPanel>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Style.Resources>
                                    
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"></Setter>
                                    </Style>
                                </Style.Resources>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#0078d7"></Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <Button Content="Download Results To Excel Spreadsheet"
                        FontFamily="Bebas"
                        FontSize="14"
                        Background="#0078d7"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        Padding="10,0,10,0"
                        x:Name="DownloadResultsButton"
                        Style="{StaticResource BetterButton}"
                        Grid.Column="1"
                        Click="DownloadResultsButton_Click"
                        Grid.Row="1" />
                </StackPanel>
            </Grid>



        
    </Border>
</UserControl>
