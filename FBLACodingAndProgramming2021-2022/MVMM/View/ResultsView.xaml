<UserControl x:Class="FBLACodingAndProgramming2021_2022.MVMM.View.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FBLACodingAndProgramming2021_2022.MVMM.View"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Border Grid.Column="1"
            BorderBrush="#0078d7"
            BorderThickness="5"
            CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border CornerRadius="5"
                    Margin="25,20,20,20"
                    BorderThickness="5"
                    BorderBrush="#0078d7">
                <m:Map x:Name="Map" CredentialsProvider="qc9Y7SHHRgYbev4fUy0q~ZgF6eo0fD9ieP3VnKoDX_Q~AnM4TYqGE82d-jah6trRCttSyWK53fdPmYnyOjGbcYfmD61QQYzwoRH2oNJN9AZG" Mode="Aerial"  Visibility="Hidden">

                </m:Map>
            </Border>




            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition 
                        />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>



                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <RichTextBox x:Name="FeatureInformation"
                         Background="#d1d1d1"
                         Foreground="Black"
                         FontFamily="bebas"
                         FontSize="14"
                          Grid.RowSpan="2"
                         VerticalScrollBarVisibility="Auto"
                         
                         IsReadOnly="True"
                         Padding="10"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Margin="20,10,10,10"
                         BorderThickness="0">
                            <RichTextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius"
                                    Value="5" />
                                </Style>
                            </RichTextBox.Resources>

                        </RichTextBox>
                        <Border Background="#d1d1d1" BorderThickness="2" BorderBrush="#0078d7" Margin="10" CornerRadius="5" Grid.Row="0" Grid.Column="1">
                            <Image x:Name="ThumbnailImage" Stretch="Uniform">
                                
                            </Image>
                        </Border>

                        <RichTextBox x:Name="WeatherInformation"
                         Background="#d1d1d1"
                         Foreground="Black"
                         FontFamily="bebas"
                         FontSize="14"
                         Grid.Column="1"
                         Grid.Row="1"
                         
                         
                         IsReadOnly="True"
                         Padding="10"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Margin="10"
                         BorderThickness="0">
                            <RichTextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius"
                                    Value="5" />
                                </Style>
                            </RichTextBox.Resources>

                        </RichTextBox>


                    </Grid>
                    
                    <Border 
                            CornerRadius="5"
                            BorderBrush="#0078d7"
                        Grid.Row="1"
                        Margin="20,0,20,0"
                            BorderThickness="5">
                        <Grid Grid.Row="1"
                          Margin="20,0,20,0"
                          >



                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="AddToRoute"
                            Grid.Column="0"
                            Content="Add To Route"
                            FontSize="14"
                            Background="#0078d7"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="AddToRoute_Click"
                                Padding="10,0,10,0"
                            Style="{StaticResource BetterButton}"
                            FontFamily="bebas"
                            />
                            <Button x:Name="RemoveFromRoute"
                            Grid.Column="1"
                            Content="Remove From Route"
                            FontSize="14"
                            Background="#0078d7"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Padding="10,0,10,0"
                            Click="RemoveFromRoute_Click"
                            Style="{StaticResource BetterButton}"
                            FontFamily="bebas"
                            />
                        </Grid>

                    </Border>

                </Grid>


                <StackPanel Grid.Row="1"
                            Grid.Column="1">

                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Alphabetical Order"
                                Style="{StaticResource BetterButton}"
                                FontFamily="Bebas"
                                Background="#0078d7"
                                Padding="10,0,10,0"
                                HorizontalAlignment="Center"
                                Click="AlphabeticalOrder_Click"
                                FontSize="14"/>
                        <Button Content="Distance From Home"
                                Grid.Column="1"
                                Padding="10,0,10,0"
                                Style="{StaticResource BetterButton}"
                                FontFamily="Bebas"
                                Click="DistanceFromHome_Click"
                                Background="#0078d7"
                                HorizontalAlignment="Center"
                                FontSize="14"/>
                    </Grid>

                    <ListBox Foreground="Black"
                         Grid.Row="1"
                         Height="175"
                         Background="#d1d1d1"
                         Margin="20,0,20,20"
                         x:Name="MainListBox"
                         MouseDoubleClick="MainListBox_MouseDoubleClick">
                        <ListBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius"
                                    Value="5" />
                            </Style>
                        </ListBox.Resources>
                    </ListBox>

                    <Button Content="Download Results To Excel Spreadsheet"
                        FontFamily="Bebas"
                        FontSize="14"
                        Background="#0078d7"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        Padding="10,0,10,0"
                        x:Name="DownloadResultsButton"
                        Style="{StaticResource BetterButton}"
                        Grid.Column="1"
                        Click="DownloadResultsButton_Click"
                        Grid.Row="1" />
                </StackPanel>
            </Grid>



        </Grid>
    </Border>
</UserControl>
