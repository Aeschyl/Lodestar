<UserControl x:Class="FBLACodingAndProgramming2021_2022.MVMM.View.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FBLACodingAndProgramming2021_2022.MVMM.View"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Border Grid.Column="1"
            BorderBrush="#0078d7"
            BorderThickness="5"
            CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ListBox Foreground="Black"
                     Background="#d1d1d1"
                     Margin="20,20,0,20"
                     x:Name="MainListBox"
                     MouseDoubleClick="MainListBox_MouseDoubleClick">
                <ListBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius"
                                Value="5" />
                    </Style>
                </ListBox.Resources>
            </ListBox>

            <TextBox x:Name="FeatureName"
                     Background="#d1d1d1"
                     Foreground="Black"
                     FontFamily="bebas"
                     FontSize="20"
                     Grid.Column="1"
                     TextWrapping="WrapWithOverflow"
                     IsReadOnly="True"
                     Height="60"
                     Padding="10"
                     VerticalAlignment="Top"
                     Margin="20,20,20,0"
                     BorderThickness="0">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius"
                                Value="5" />
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBox x:Name="FeatureInformation"
                     Background="#d1d1d1"
                     Foreground="Black"
                     FontFamily="bebas"
                     FontSize="14"
                     VerticalScrollBarVisibility="Auto"
                     Grid.Column="1"
                     TextWrapping="WrapWithOverflow"
                     IsReadOnly="True"
                     Height="250"
                     Padding="10"
                     VerticalAlignment="Top"
                     Margin="20,100,20,0"
                     BorderThickness="0">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius"
                                Value="5" />
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Button Content="Get Weather Information"
                    Grid.Column="1"
                    VerticalAlignment="Top"
                    Margin="20,370,20,40"
                    FontSize="14"
                    x:Name="GetWeatherButton"
                    Height="30"
                    Click="GetWeatherButton_Click"
                    FontFamily="Bebas"
                    Background="#0078d7"
                    Style="{StaticResource BetterButton}">
                
            </Button>


        </Grid>
    </Border>
</UserControl>
