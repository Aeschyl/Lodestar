<UserControl x:Class="FBLACodingAndProgramming2021_2022.MVMM.View.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FBLACodingAndProgramming2021_2022.MVMM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ListBox Foreground="White"
                 Background="Black" 
                 x:Name="MainListBox"
                 
                 MouseDoubleClick="MainListBox_MouseDoubleClick"/>

        <TextBox x:Name="FeatureName"
                 Background="Black"
                 Foreground="White"
                 FontFamily="bebas"
                 FontSize="20"
                 Grid.Column="1"
                 TextWrapping="WrapWithOverflow"
                 IsReadOnly="True"
                 Height="40"
                 VerticalAlignment="Top"
                 Margin="20,20,20,0"
                 BorderThickness="0"/>

        <TextBox x:Name="FeatureInformation"
                 Background="Black"
                 Foreground="White"
                 FontFamily="bebas"
                 FontSize="14"
                 Grid.Column="1"
                 TextWrapping="WrapWithOverflow"
                 IsReadOnly="True"
                 Height="250"
                 VerticalAlignment="Top"
                 Margin="20,80,20,0" 
                 BorderThickness="0"/>

        <Border Grid.Column="1"
                BorderBrush="#0078d7"
                BorderThickness="5" />
    </Grid>
</UserControl>
